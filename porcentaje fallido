#include <iostream>

using namespace std;

int main ()
{
   int importe, pagar;
    cout << "escribir importe total" << endl;
    cin >> importe;
   if ( importe < 100)
   {
     cout << " 5 porciento de descuento " <<  pagar = importe% 0,95; << endl;
   }
   if (importe > 500)
   {
     cout << " 15 porciento de descuento " << pagar = importe % 0,85 << endl;
   }
   else
   {
     cout << " 10 porciento de descuento " << pagar = importe % 0,90 << endl;
   }

    cout << pagar;


    return 0;
}
